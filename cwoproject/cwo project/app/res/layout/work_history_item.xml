<LinearLayout android:id="@+id/desc_layout"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/notes_activity_horizontal_margin"
    android:layout_marginLeft="@dimen/notes_activity_horizontal_margin"
    android:layout_marginTop="@dimen/notes_activity_horizontal_margin"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:gravity="left"
        android:id="@+id/service_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textSize="18dp"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/desc"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:maxLines="2"
        android:textColor="@color/text_color_light"
        android:textSize="15dp"
        tools:ignore="RtlHardcoded" />

</LinearLayout>

