<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true">

    <TextView android:id="@+id/reject_label"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/notes_activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:padding="@dimen/notes_activity_horizontal_margin"
        android:elevation="10dp"
        android:textColor="@color/white"
        android:background="@drawable/rect_bg_red" />

    <TextView android:id="@+id/accept_label"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/reject_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:padding="@dimen/notes_activity_horizontal_margin"
        android:elevation="10dp"
        android:layout_marginTop="@dimen/notes_activity_horizontal_margin"
        android:layout_marginBottom="@dimen/notes_activity_horizontal_margin"
        android:layout_marginLeft="@dimen/notes_activity_horizontal_margin"
        android:textColor="@color/white"
        android:background="@drawable/rect_bg_green" />


    <LinearLayout android:id="@+id/desc_layout"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/accept_label"
        android:layout_marginBottom="@dimen/notes_activity_horizontal_margin"
        android:layout_marginTop="@dimen/notes_activity_horizontal_margin"
        android:layout_marginLeft="@dimen/notes_activity_horizontal_margin"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/service_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="18dp"
            android:textColor="@color/dark_grey"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:text=" wewe wew n or eiuiu ir piuh rwiuh9rh9e h9 h9hr eh 98h9hiue eige"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            tools:ignore="RtlHardcoded" />

    </LinearLayout>

</RelativeLayout>
