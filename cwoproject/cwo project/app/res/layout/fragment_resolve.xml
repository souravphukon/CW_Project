<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">



    <TextView android:id="@+id/resolve_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Issue Resolved?"
        android:gravity="center"
        android:textColor="@color/dark_grey" />


    <LinearLayout android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_bg_blue"
            android:elevation="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_margin="@dimen/notes_activity_horizontal_margin"
            android:padding="@dimen/notes_activity_horizontal_margin"
            android:text="Yes"/>

        <TextView
            android:id="@+id/no"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_bg_blue"
            android:elevation="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_margin="@dimen/notes_activity_horizontal_margin"
            android:padding="@dimen/notes_activity_horizontal_margin"
            android:text="No"/>

    </LinearLayout>


</LinearLayout>
